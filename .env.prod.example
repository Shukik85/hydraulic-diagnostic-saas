# Production environment variables (do NOT commit real secrets)
SECRET_KEY=please-generate-strong-secret
DEBUG=0
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Database
DATABASE_NAME=hydraulic
DATABASE_USER=hydraulic
DATABASE_PASSWORD=please-change-password
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# CORS / CSRF (set to your domain)
CORS_ALLOWED_ORIGINS=https://your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Security (prod)
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=31536000
SECURE_REFERRER_POLICY=no-referrer-when-downgrade

# Timescale (optional)
TIMESCALE_ENABLED=0
TIMESCALE_CHUNK_TIME_INTERVAL=7 days
