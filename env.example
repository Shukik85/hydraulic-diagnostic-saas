# Hydraulic Diagnostic SaaS - Environment Configuration
# Copy this file to .env and update values for your environment

# === Application ===
ENVIRONMENT=production
APP_NAME=Hydraulic Diagnostic SaaS

# === Database ===
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://hydraulic_user:your_secure_postgres_password_here@postgres:5432/hydraulic_db

# === Redis ===
REDIS_PASSWORD=your_secure_redis_password_here

# === Django ===
DJANGO_SECRET_KEY=your_django_secret_key_min_50_chars_random_string_here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# === RAG Service ===
RAG_ADMIN_KEY=your_rag_admin_secret_key_here
OLLAMA_MODEL=deepseek-r1:1.5b

# === Monitoring ===
GRAFANA_PASSWORD=your_grafana_password_here

# === Email (optional) ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# === S3/Storage (optional) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-central-1

# === Sentry (optional) ===
SENTRY_DSN=

# === Auth ===
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
