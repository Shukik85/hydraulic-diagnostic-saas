# .env.production.example
# Продукшн конфигурация для Hydraulic Diagnostic SaaS

# КРИТИЧНО: Безопасность
SECRET_KEY=your-super-secret-production-key-here-change-this-immediately
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database - PostgreSQL обязателен для production
DATABASE_URL=postgresql://user:password@host:5432/hydraulic_diagnostic_prod

# Redis - для кеширования и Celery
REDIS_URL=redis://localhost:6379/0
AI_REDIS_URL=redis://localhost:6379/1

# AI и OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# CORS и Security
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AWS S3 для хранения файлов
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=hydraulic-diagnostic-files
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# Email конфигурация
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Monitoring и Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Performance и Caching
CACHE_TIMEOUT=3600
AI_CACHE_TIMEOUT=86400
DATABASE_CONN_MAX_AGE=600
DATABASE_CONN_HEALTH_CHECKS=True

# Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_REDIS_URL=redis://localhost:6379/2

# Celery Worker конфигурация
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_MEMORY_PER_CHILD=200000
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,pdf,docx,md

# SSL и Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO
LOG_ROOT=/var/log/hydraulic-diagnostic
STRUCTURED_LOGGING=True

# Health Checks
HEALTH_CHECK_ACCESS_TOKEN=your-health-check-secret-token

# Backup и Maintenance
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=False