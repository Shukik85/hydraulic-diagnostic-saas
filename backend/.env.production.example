# Production environment variables example
# Copy to .env in production and set secure values

# Core
SECRET_KEY=change_me_production_secret
DEBUG=False
ALLOWED_HOSTS=api.example.com,www.api.example.com
CSRF_TRUSTED_ORIGINS=https://api.example.com,https://www.api.example.com

# Database (PostgreSQL)
DATABASE_NAME=hydraulic
DATABASE_USER=hydraulic_user
DATABASE_PASSWORD=change_me
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/1

# CORS
CORS_ALLOWED_ORIGINS=https://frontend.example.com
CORS_URLS_REGEX=^/api/.*$

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_REFERRER_POLICY=no-referrer-when-downgrade

# Logging
DJANGO_LOG_LEVEL=INFO
DJANGO_REQUEST_LOG_LEVEL=WARNING
DJANGO_DATABASE_LOG_LEVEL=ERROR

# DRF / JWT (optional overrides)
ACCESS_TOKEN_MINUTES=60
REFRESH_TOKEN_DAYS=7

# OpenAI / RAG (optional)
OPENAI_API_KEY=
