# Development environment variables example
# Copy to backend/.env for local development

# Core
SECRET_KEY=dev_secret_change_me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database (PostgreSQL)
DATABASE_NAME=hydraulic_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/1

# CORS for local frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_URLS_REGEX=^/api/.*$

# Security (dev defaults)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_REFERRER_POLICY=no-referrer-when-downgrade

# Logging
DJANGO_LOG_LEVEL=DEBUG
DJANGO_REQUEST_LOG_LEVEL=WARNING
DJANGO_DATABASE_LOG_LEVEL=WARNING

# DRF / JWT (optional overrides)
ACCESS_TOKEN_MINUTES=60
REFRESH_TOKEN_DAYS=7

# OpenAI / RAG (optional)
OPENAI_API_KEY=
