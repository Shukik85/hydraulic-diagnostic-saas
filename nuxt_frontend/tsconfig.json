{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "@nuxt/schema"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": [
    "nuxt.config.ts",
    "app.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    "components/**/*.vue",
    "composables/**/*.ts",
    "plugins/**/*.ts",
    "assets/**/*.css"
  ]
}
