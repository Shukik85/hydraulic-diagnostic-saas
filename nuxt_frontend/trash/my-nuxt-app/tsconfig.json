{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "@nuxt/schema"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.vue",
    "nuxt.config.ts",
    ".nuxt.config.ts"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}