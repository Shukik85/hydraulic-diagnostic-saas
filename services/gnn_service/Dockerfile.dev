# Development Dockerfile for GNN Service
# Python 3.14.0 + PyTorch 2.8.0 + CUDA 12.8 + Dev Tools
# Optimized for fast iteration with hot reload

FROM nvidia/cuda:12.8.0-cudnn9-devel-ubuntu24.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Install Python 3.14 and dev tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
        python3.14 \
        python3.14-dev \
        python3.14-distutils \
        python3-pip \
        git \
        curl \
        vim \
        htop \
        build-essential \
        cmake \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.14 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.14 1 && \
    update-alternatives --install /usr/bin/python python /usr/bin/python3.14 1

# Install pip for Python 3.14
RUN curl -sS https://bootstrap.pypa.io/get-pip.py | python3.14
RUN python3.14 -m pip install --no-cache-dir --upgrade pip setuptools wheel

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements-dev.txt requirements.txt ./

# Install PyTorch 2.8.0 with CUDA 12.8 first
RUN pip install --no-cache-dir \
    torch==2.8.0 \
    torchvision==0.19.0 \
    torchaudio==2.5.0 \
    --index-url https://download.pytorch.org/whl/cu128

# Install development dependencies
RUN pip install --no-cache-dir -r requirements-dev.txt

# Copy application code (will be overridden by volume mount)
COPY . .

# Create directories
RUN mkdir -p \
    logs \
    models/checkpoints \
    models/production \
    data/raw \
    data/processed \
    checkpoints/dev \
    checkpoints/production

# Set environment variables
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Expose ports
EXPOSE 8002 6006

# Development command with hot reload
CMD ["uvicorn", "api.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8002", \
     "--reload", \
     "--log-level", "debug"]
