{
  "name": "hydraulic-diagnostics-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "vue-tsc --noEmit",
    "type-check": "npm run typecheck",
    "predev": "npm run generate:api || true",
    "dev": "nuxt dev",
    "prebuild": "npm run typecheck",
    "build": "nuxt build",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate:api": "npx openapi-typescript ../../specs/combined-api.json -o ./generated/api/schema.ts",
    "api:validate": "redocly lint ../../specs/combined-api.json",
    "api:bundle": "redocly bundle ../../specs/combined-api.json -o dist/api.json"
  },
  "overrides": {
    "glob": "^11.1.0"
  },
  "dependencies": {
    "@nuxt/icon": "^2.1.0",
    "@nuxt/image": "^2.0.0",
    "@pinia/nuxt": "^0.11.3",
    "@unhead/schema": "^2.0.19",
    "@unhead/vue": "^2.0.19",
    "@vueuse/core": "^14.0.0",
    "@vueuse/nuxt": "^14.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "echarts": "^6.0.0",
    "nuxt": "^4.2.1",
    "nuxt-security": "^2.4.0",
    "pinia": "^3.0.4",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.4.0",
    "three": "^0.181.2",
    "vue": "^3.5.24",
    "vue-echarts": "^8.0.1",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@iconify-json/heroicons": "^1.2.3",
    "@nuxt/eslint": "^1.10.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxtjs/i18n": "^10.2.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/three": "^0.181.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.4"
  }
}
