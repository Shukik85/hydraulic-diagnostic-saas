{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest/globals",
      "@nuxtjs/i18n",
      "@vueuse/core",
      "@types/node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".nuxt/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt/dist",
    "dist"
  ]
}
