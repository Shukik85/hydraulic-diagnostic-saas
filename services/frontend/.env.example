# ===========================================
# Hydraulic Diagnostic SaaS - Frontend Config
# ===========================================

# Environment
# Options: development, staging, production
NUXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# API Configuration
# ===========================================

# Backend API Base URL
# Development: http://localhost:8000/api/v1
# Production: https://api.hydraulic-diagnostics.com/api/v1
NUXT_PUBLIC_API_BASE=http://localhost:8000/api/v1

# WebSocket Base URL
# Development: ws://localhost:8000/ws
# Production: wss://api.hydraulic-diagnostics.com/ws
NUXT_PUBLIC_WS_BASE=ws://localhost:8000/ws

# API Timeout (milliseconds)
NUXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# Service Endpoints (relative to API_BASE)
# ===========================================

# Auth Service
NUXT_PUBLIC_ENDPOINT_AUTH=/auth

# Equipment Service
NUXT_PUBLIC_ENDPOINT_EQUIPMENT=/equipment

# Diagnosis Service
NUXT_PUBLIC_ENDPOINT_DIAGNOSIS=/diagnosis

# GNN Service
NUXT_PUBLIC_ENDPOINT_GNN=/gnn

# RAG Service
NUXT_PUBLIC_ENDPOINT_RAG=/rag

# Admin Service
NUXT_PUBLIC_ENDPOINT_ADMIN=/admin

# ===========================================
# Feature Flags
# ===========================================

# Enable RAG AI Interpretation
NUXT_PUBLIC_ENABLE_RAG=true

# Enable Real-time WebSocket Updates
NUXT_PUBLIC_ENABLE_WEBSOCKET=true

# Enable Advanced Charts
NUXT_PUBLIC_ENABLE_CHARTS=true

# Enable Mock Data (for demo/testing)
NUXT_PUBLIC_ENABLE_MOCK_DATA=false

# Enable Debug Mode
NUXT_PUBLIC_DEBUG=false

# ===========================================
# Application Settings
# ===========================================

# Application Name
NUXT_PUBLIC_APP_NAME="Hydraulic Diagnostics"

# Application Version
NUXT_PUBLIC_APP_VERSION=1.0.0

# Default Language
NUXT_PUBLIC_DEFAULT_LOCALE=ru

# Available Languages (comma-separated)
NUXT_PUBLIC_AVAILABLE_LOCALES=ru,en

# ===========================================
# Security
# ===========================================

# JWT Token Storage Key
NUXT_PUBLIC_TOKEN_STORAGE_KEY=auth_token

# Session Timeout (minutes)
NUXT_PUBLIC_SESSION_TIMEOUT=30

# Enable HTTPS (production only)
NUXT_PUBLIC_FORCE_HTTPS=false

# ===========================================
# Monitoring & Analytics (optional)
# ===========================================

# Sentry DSN (error tracking)
# NUXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Google Analytics ID
# NUXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# Development Only
# ===========================================

# API Mock Server (if backend not available)
# NUXT_PUBLIC_MOCK_API=true

# Disable SSR (for debugging)
# NUXT_SSR=false

# ===========================================
# Production Settings
# ===========================================

# For production deployment, set:
# NUXT_PUBLIC_ENVIRONMENT=production
# NUXT_PUBLIC_API_BASE=https://api.hydraulic-diagnostics.com/api/v1
# NUXT_PUBLIC_WS_BASE=wss://api.hydraulic-diagnostics.com/ws
# NUXT_PUBLIC_FORCE_HTTPS=true
# NUXT_PUBLIC_DEBUG=false
# NUXT_PUBLIC_ENABLE_MOCK_DATA=false