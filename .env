# ============================================
# Hydraulic Diagnostics SaaS - Environment Variables
# ============================================

# Database
# DATABASE_NAME=hydraulic_db
# DATABASE_USER=user
# DATABASE_PASSWORD=change-me-in-production
# POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Backend FastAPI
BACKEND_FASTAPI_PORT=8100
SECRET_KEY=generate-secure-key-for-production
API_KEY_HEADER=X-API-Key

# Backend Django
BACKEND_DJANGO_PORT=8000
DJANGO_SECRET_KEY=django-secret-key-change-in-production

# Services
GNN_SERVICE_PORT=8001
RAG_SERVICE_PORT=8002

# Internal API Keys
ML_INTERNAL_API_KEY=ml-service-api-key
RAG_INTERNAL_API_KEY=rag-service-api-key

# Environment
ENV=production
DEBUG=True
LOG_LEVEL=INFO

# CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# LLM Services
OLLAMA_BASE_URL=http://ollama:11434

# Monitoring (optional)
GRAFANA_PASSWORD=admin
